<div  class="ui container transbox">
    <h2><%=current_user.name.titlecase%>'s Cards: </h2>

      <fieldset>
        <legend><h2>Add a new card to your account: </h2></legend>

        <div id="error-container">
          <%= render partial: "user_card_errors"%>
        </div>

        <%= render partial: "user_card_form", locals: {editing: false}%>

      </fieldset>


      <br/><br/>

      <%= form_tag(user_user_cards_path(current_user), method: "get") do %>

      <div class="ui labeled input">
        <div class="ui brown label">
          Filter by Type:
        </div>
        <%= select_tag(:card_type, options_for_select(MagicCard.types, params[:card_type]), :prompt => "All")%>
      </div>

        <%=submit_tag("Filter", :class => 'ui circular button brown') %>

      <% end %>

      <br/>

      <%= render partial: "user_cards/index_list", locals: {update_delete_buttons: true} %>
</div>
