<div class="ui container">
  <div class="item text-color"
    <fieldset class="ui container">
      <div class="ui container transbox">
        <h2><%=@user.name.titlecase%>'s Decks: </h2>

          <%= render partial: "new_deck_submit_form"  %>

          <br/> <br/>

        <%@user.decks.each do |deck| %>
          <fieldset>
            <legend><h2><%= deck.name%>
              <%=button_to "View Details", user_deck_path(@user, deck), method: "get", form: { style: "display:inline-block"}, class:'ui circular button teal' %>
            </h2></legend>

            <div class="ui divided relaxed list ">

              <div class="ui item">
                <h4>Format: <%= deck.format %></h4>
              </div>

              <div class="ui item">
                <h4>Cards: <%= deck.deck_cards.count %></h4>
              </div>

            </div>

          </fieldset>

          <br/>
        <%end %>
      </div>
    </fieldset>
  </div>
</div>
