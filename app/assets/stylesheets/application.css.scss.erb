 @import "semantic-ui";

.landing-image {
  background: url("<%= asset_path 'MTG-background.jpg' %>") no-repeat center center fixed !important;
  -webkit-background-size: cover !important;
  -moz-background-size: cover !important;
  -o-background-size: cover !important;
  background-size: cover !important;
}

li.margin{
  margin: 8px 0;
}

.text-color-black {
  color: black;
}

#page-nav-wrapper {
  text-align: center;
}

#page-nav {
  display: inline-block;
}

.transbox {
  padding: 30px;
  margin-bottom: 30px;
  background-color: rgba(245,255,250,0.80);
  border-radius:8px;
  filter: alpha(opacity=80); /* For IE8 and earlier */
}

.center-in-div {
  align: middle;
}

.black-background {
  background-color: black !important;
}

.width {
  width: 775px;
}

.width2 {
  width: 715px;
}

.width3 {
  width: 750px;
}

.fixed {
  position: fixed !important;
  left:66.75%;
  top:150px;
}

.ui.segment {
  background: #ffffff00 !important;
  height: 335px;
}

.ui.segment.deck-show-segment {
  background: rgba(255,255,255,0.80) !important;
  color: black !important;
  height: 335px;
}

.card-image {
  border-radius: 5%;
  height: 310px;
  width: 223px;
}

.absolute {
  position: absolute;
}

.padding10 {
  padding-top: 10px;
  padding-right: 10px;
  margin-bottom: 20px;
}

.marginLeft {
  margin-left: 15px !important;
}
.center {
  margin: auto;
  width: 50%;
  padding: 10px;
}

.center-vert-div {
     position: absolute;
     margin: auto;
     top: 0;
     right: 0;
     bottom: 0;
     left: 0;
     width: 100px;
     height: 100px;
}

.right-float {
  float: right;
  flex:auto;
}

.trans-background {
  background-color: rgba(245,255,250,0.35)!important;
}

.outer-div
{
     display: table;
     position: absolute;
     height: 100%;
     width: 100%;
}
.mid-div
{
     display: table-cell;
     vertical-align: middle;
}
.inner-div
{
     margin: 0 auto;
}

.center-div
{
     position: absolute;
     margin: auto;
     top: 0;
     right: 0;
     bottom: 0;
     left: 0;
     width: 100px;
     height: 100px;
}

.centered-container
{
     display: flex;
     align-items: center;
     justify-content: center;
     height: 100vh;
}
.centered-item
{
     background-color: #f3f2ef;
     border-radius: 3px;
     width: 200px;
     height: 100px;
}

.z1 {
  z-index: 1;
}

strong {
  font-size: 16px !important;
}

fieldset {
    margin: 10px;
    padding: 15px !important;
    border:2px solid green;
    -moz-border-radius:8px;
    -webkit-border-radius:8px;
    border-radius:8px;
}
